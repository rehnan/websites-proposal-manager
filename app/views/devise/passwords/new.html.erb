<%= render 'devise/shared/header' %>
<font color="#534292"><h3>Forgot your password?</h3></font>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

<font color="red">
  <div class="form-group">
    <div class="input-icon icon-username"></div>
    <%= f.input :email, required: true, :input_html => { :class => "form-control" }, placeholder:"Email address", autofocus: true   %>
</div>

<div class="form-group">
    <%= f.button :submit, "Send me reset password instructions", class: "btn btn-primary btn-lg btn-block"  %>
</div>
</font>
<% end %>

<%= render "devise/shared/links" %>
<%= render 'devise/shared/footer' %>