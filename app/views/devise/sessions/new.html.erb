<%= render 'devise/shared/header' %>
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="form-group">
    <div class="input-icon icon-username"></div>
    <%= f.input :email, required: false, :input_html => { :class => "form-control" }, placeholder:"Email address", autofocus: true   %>
</div>

<div class="form-group">
    <div class="input-icon icon-password"></div>
    <%= f.input :password, required: false, :input_html => { :class => "form-control password" }, placeholder:"Password"   %>
</div>

<div class="form-group">
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
</div>

<div class="form-group">
    <%= f.button :submit, "Sign in", class: "btn btn-primary btn-lg btn-block" %>
</div>
<% end %>
<div class="form-group">
    <%= render "devise/shared/links" %>
</div>
<%= render 'devise/shared/footer' %>