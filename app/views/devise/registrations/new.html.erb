<%= render 'devise/shared/header' %>
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<font color="red">

<div class="form-group">
    <div class="input-icon icon-username"></div>
    <%= f.input :email, required: true, autofocus: true, :input_html => { :class => "form-control" }, placeholder:"Email" %>
</div>

<div class="form-group">
    <div class="input-icon icon-password"></div>
    <%= f.input :password, required: true,  :input_html => { :class => "form-control password" }, placeholder:"Password" %>
</div>

<div class="form-group">
    <div class="input-icon icon-password"></div>
    <%= f.input :password_confirmation, required: true, :input_html => { :class => "form-control password" }, placeholder:"Repeat Password" %>
</div>

<div class="form-group">
<%= f.button :submit, "Sign up", class: "btn btn-primary btn-lg btn-block" %>
</div>
</font>
<% end %>

<%= render "devise/shared/links" %>
<%= render 'devise/shared/footer' %>